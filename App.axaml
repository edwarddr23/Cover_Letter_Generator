<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CoverLetterGenerator.App"
             xmlns:local="using:CoverLetterGenerator"
             xmlns:converters="using:CoverLetterGenerator.Converters"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
        <converters:StringEqualityConverter x:Key="StringEqualityConverter"/>    
    </Application.Resources>
  
    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="/Assets/IconStyles.axaml"/>
    </Application.Styles>
</Application>