<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CoverLetterGenerator.ViewModels"
             xmlns:models="using:CoverLetterGenerator.Models"
             xmlns:conv="using:CoverLetterGenerator.Converters"
             x:Class="CoverLetterGenerator.Views.GenerateCoverLetterView"
             x:DataType="vm:GenerateCoverLetterViewModel">

    <UserControl.Resources>
        <conv:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter"/>
    </UserControl.Resources>

    <Design.DataContext>
        <vm:GenerateCoverLetterViewModel/>
    </Design.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10" MaxWidth="700" MinWidth="500" Margin="50">
        <TextBlock Text="{Binding PageTitle}" FontSize="40" HorizontalAlignment="Center"/>

        <!-- Template Names Selection -->
        <TextBlock>Template Names:</TextBlock>
        <ItemsControl ItemsSource="{Binding TemplateNames}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="models:ChoiceItem">
                    <RadioButton Content="{Binding Name}"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                GroupName="TemplateGroup" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Template Document Combo Box -->
        <StackPanel>
            <TextBlock Text="Template Documents:"/>
            <ComboBox
                x:Name="DocumentsComboBox"
                ItemsSource="{Binding TemplateDocuments}"
                SelectedItem="{Binding SelectedDocument, Mode=TwoWay}"
                HorizontalAlignment="Stretch"
            />
        </StackPanel>

        <!-- Job Source Input -->
        <TextBlock>Job Source:</TextBlock>
        <TextBox Text="{Binding JobSource, Mode=TwoWay}" Watermark="Enter job source"/>

        <!-- Company Name Input -->
        <TextBlock>Company Name:</TextBlock>
        <TextBox Text="{Binding CompanyName, Mode=TwoWay}" Watermark="Enter company name"/>

        <!-- Job Title Input -->
        <TextBlock>Job Title:</TextBlock>
        <TextBox Text="{Binding JobTitle, Mode=TwoWay}" Watermark="Enter job title"/>

        <!-- Validation Errors -->
        <StackPanel IsVisible="{Binding Errors.Count, Converter={StaticResource IntToBoolConverter}}}" Spacing="5">
            <TextBlock Text="Errors:" Foreground="Red"/>
            <ItemsControl ItemsSource="{Binding Errors}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:KeyValueItem">
                        <TextBlock Text="{Binding Value}" Foreground="Red" FontSize="12" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Generate Button -->
        <Button
            Command="{Binding GenerateCoverLetterCommand}"
            Content="Generate Cover Letter"
            Margin="0,10,0,0"
            Padding="20"
            HorizontalAlignment="Center"
        />
    
        <!-- Success Message -->
        <TextBox
            Text="{Binding GenerateSuccessfulMessage}" 
            IsReadOnly="True"
            Foreground="Green"
            FontWeight="Bold"
            IsVisible="{Binding GenerateSuccessfulMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"
        />

        <!-- Open Word Document Button -->
        <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
            <Button
                Command="{Binding OpenWordDocument}"
                IsVisible="{Binding OutputWordFilePath, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"
                Content="Open Word Document"
                Padding="20"
                HorizontalAlignment="Center"
            />
            <Button
                Command="{Binding OpenPDFDocument}"
                IsVisible="{Binding OutputPDFFilePath, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"
                Content="Open PDF Document"
                Padding="20"
                HorizontalAlignment="Center"
            />
            <Button
                Command="{Binding OpenInFileExplorer}"
                IsVisible="{Binding OutputDirectoryPath, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"
                Content="Reveal in File Explorer"
                Padding="20"
                HorizontalAlignment="Center"
            />
        </StackPanel>

    </StackPanel>
    
</UserControl>